apiVersion: v1
kind: Secret
metadata:
  name: pose-secrets
  namespace: pose-microservices
type: Opaque
stringData:
  # Database
  # ตัวอย่าง: mysql://username:password@host:port/database
  DATABASE_URL: "mysql://root:your_password@your-db-host:3306/your_database"
  DB_PASSWORD: "your_database_password"
  
  # JWT - ใช้ string ยาว ๆ สุ่มสำหรับความปลอดภัย
  # สร้างด้วย: openssl rand -base64 32
  JWT_SECRET: "your-super-secret-jwt-key-min-32-characters"
  JWT_REFRESH_SECRET: "your-super-secret-refresh-key-min-32-characters"
  
  # SMTP - สำหรับส่ง email
  # Gmail: ใช้ App Password (https://myaccount.google.com/apppasswords)
  SMTP_USER: "your-email@gmail.com"
  SMTP_PASS: "your-gmail-app-password"
  
  # OAuth2 - Google
  # สร้างที่: https://console.cloud.google.com/apis/credentials
  GOOGLE_CLIENT_ID: "123456789-abcdefghijklmnop.apps.googleusercontent.com"
  GOOGLE_CLIENT_SECRET: "GOCSPX-your-google-client-secret"
  GOOGLE_REDIRECT_URI: "http://localhost:3000/auth/google/callback"
  
  # OAuth2 - Microsoft
  # สร้างที่: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
  MICROSOFT_CLIENT_ID: "12345678-1234-1234-1234-123456789abc"
  MICROSOFT_CLIENT_SECRET: "your-microsoft-client-secret"
  MICROSOFT_REDIRECT_URI: "http://localhost:3000/auth/microsoft/callback"
  
  # Firebase
  # Firebase (Optional - for Firebase Authentication)
  # Get credentials from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/serviceaccounts/adminsdk
  FIREBASE_PROJECT_ID=your-project-id
  FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
  FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Key\n-----END PRIVATE KEY-----\n"

# หมายเหตุ:
# 1. Copy ไฟล์นี้เป็น secrets.yaml: cp secrets.yaml.example secrets.yaml
# 2. แก้ไขค่าทั้งหมดให้เป็นค่าจริงของคุณ
# 3. secrets.yaml จะไม่ถูก commit (อยู่ใน .gitignore แล้ว)
# 4. stringData จะถูกแปลงเป็น base64 อัตโนมัติโดย Kubernetes
